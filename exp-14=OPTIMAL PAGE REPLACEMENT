#include <stdio.h>

int main() {
    int pages[8] = {7, 0, 1, 2, 0, 3, 0, 4};
    int frame[3] = {-1, -1, -1};
    int faults = 0;

    for (int i = 0; i < 8; i++) {
        int found = 0;
        for (int j = 0; j < 3; j++)
            if (frame[j] == pages[i]) found = 1;

        if (!found) {
            int farthest = -1, index = -1;
            for (int j = 0; j < 3; j++) {
                int k;
                for (k = i + 1; k < 8; k++)
                    if (frame[j] == pages[k]) break;
                if (k > farthest) {
                    farthest = k;
                    index = j;
                }
            }
            frame[index] = pages[i];
            faults++;
        }
    }
    printf("Optimal Page Faults = %d\n", faults);
    return 0;
}
